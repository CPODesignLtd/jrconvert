@model IEnumerable<JrvNetMigration.Models.Location>

@{
    ViewData["Title"] = "Select Location";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Select Your Location</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Please select your working location:</p>
                    <form asp-action="SelectLocation" method="post">
                        @foreach (var location in Model)
                        {
                            <div class="form-check mb-2">
                                <input type="radio" 
                                       class="form-check-input" 
                                       name="locationId" 
                                       id="location-@location.Id" 
                                       value="@location.Id" 
                                       required>
                                <label class="form-check-label" for="location-@location.Id">
                                    @location.Name
                                </label>
                            </div>
                        }
                        @Html.AntiForgeryToken()
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Continue</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>